{% extends 'layouts/base.html.twig' %}

{% block title %} Profile {% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <h1 class="my-5">Profile</h1>
            <img src="{{ app.user.getGravatar }}"  class="rounded-circle shadow" alt="{{ app.user.fullName }}"/>
            <p class="lead mt-5">{{ app.user.email }}</p>
            <h2>{{ app.user.fullName }}</h2>
            <p> <a href="{{ path('app_account_edit') }}">Edit your account</a> |
             <a href="#">Change your password</a> </p>
        </div>
    </div>
{% endblock %}
