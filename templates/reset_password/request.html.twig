{% extends 'layouts/base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="text-center mt-5 mb-3">Reset your password</h1>
            {% for flashError in app.flashes('reset_password_error') %}
                <div class="alert alert-error rounded" role="alert">{{ flashError }}</div>
            {% endfor %}
            <p class="text-center text-muted mb-3">
                Enter your email address and we we will send you a
                link to reset your password.
            </p>
            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <button class="btn btn-primary btn-block">Send password reset email</button>
            {{ form_end(requestForm) }}
        </div>
    </div>
    
{% endblock %}
