{% extends 'layouts/base.html.twig' %}

{% block title %} Register {% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            {% for flashError in app.flashes('verify_email_error') %}
                 <div class="alert alert-error rounded" role="alert">{{ flashError }}</div>
            {% endfor %}

            <h1 class="my-5 text-center">Create an account</h1>

            {{ form_start(registrationForm) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(registrationForm.firstName) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(registrationForm.lastName) }}
                    </div>
                </div>
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                {{ form_row(registrationForm.agreeTerms) }}

                <button type="submit" class="btn btn-primary btn-block" formnovalidate>Register</button>
                <p class="mt-3 mb-3 text-muted text-center">Si vous vous etes deja inscrit ? <a href="{{ path('app_login')}}">click ici pour se connecter</a></p>
            {{ form_end(registrationForm) }}
        </div>
    </div>
    
{% endblock %}
