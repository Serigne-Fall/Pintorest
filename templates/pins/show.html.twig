{% extends 'layouts/base.html.twig' %}

{% block title %} {{pin.title}} {% endblock %}
        
{% block body %}
        <h2>{{ pin.description }}</h2>
        <p>{{ pin.description }}</p>
        <p><a href="{{ path("app_pins_edit",{id: pin.id})}}">Edit</a> | <a href="#" onclick=" event.preventDefault(); confirm('are you sure') && document.getElementById('js-form').submit();">Delete</a> | <a href="{{ path("app_home") }}">Go back</a></p>
        
        <form id="js-form" action="{{ path("app_pins_delete",{id: pin.id})}}" method="post" style="display:none;">
                <input type="text" name="csrf_token" value="{{ csrf_token('pin_deletion_'~ pin.id)}}" />
                <input type="hidden" name="_method" value="DELETE" />
        </form>
{% endblock %}
